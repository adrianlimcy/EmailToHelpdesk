<p id="notice"><%= notice %></p>

<h1>Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Serial</th>
      <th>Machine location</th>
      <th>Contact person</th>
      <th>Contract number</th>
      <th>Problem description</th>
      <th>Avoid time</th>
      <th>Office closing time</th>
      <th>Special instructions</th>
      <th>Ticket no</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.company %></td>
        <td><%= ticket.serial %></td>
        <td><%= ticket.machine_location %></td>
        <td><%= ticket.contact_person %></td>
        <td><%= ticket.contract_number %></td>
        <td><%= ticket.problem_description %></td>
        <td><%= ticket.avoid_time %></td>
        <td><%= ticket.office_closing_time %></td>
        <td><%= ticket.special_instructions %></td>
        <td><%= ticket.ticket_no %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path %>
